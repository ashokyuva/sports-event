- model_class = Home
.page-header
  %h2=t '.title', :default => "Event"

%p{:style=>"line-height: 30px;"}
  %strong= "Event name:"
  = @ticket.event_name
  %br
  %strong= "Start-Date:"
  = @ticket.startdate.strftime("%d-%b-%Y")
  %br
  %strong= "End-Date:"
  = @ticket.enddate.strftime("%d-%b-%Y")
  %br
    
  %strong= "Days count:"
  - @a = @ticket.enddate
  = (@a - Date.today).to_i 
  = "days"
.form-actions
  = link_to "Back", all_events_path, :class => 'btn'
  /= link_to "Edit", edit_home_path(@ticket,:edit_action=>true), :class => 'btn'
  = link_to "Delete", home_path(@ticket), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
